{
  "version": 2,
  "public": false,
  "buildCommand": "npm run build",
  "env": {
    "JWT_SECRET": "@jwt_secret",
    "RUST_LOG": "@rust_log"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "http://localhost:8080/api/:path*"
    }
  ],
  "functions": {
    "backend/**": {
      "runtime": "python@3.9",
      "memory": 1024
    }
  },
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "/api/v1/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
